<!-- index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DDODGING-PROFESSOR</title>

    <link rel="stylesheet" href="/dodging-professor/gameBase.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9" defer></script>

    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/dodging-professor/keyHandler.js" defer></script>
    <script src="https://kit.fontawesome.com/d5ec65f1e9.js" crossorigin="anonymous"></script>
    <script src="/dodging-professor/gamePage.js" defer></script>
    <script src="/dodging-professor/gameObject" defer></script>
    <script src="/dodging-professor/modal.js" defer></script>
    <link rel="stylesheet" href="/dodging-professor/modal.css">

   <!-- retro nes.css framework -->
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link href="https://unpkg.com/nes.css/css/nes.css" rel="stylesheet" />

</head>
<body>
    <div class="info-container">
      <a href="/" class="nes-badge" id="nes-badge">
        <span class="is-warning">BACK</span>
      </a>      
      <i class="nes-ash" id="nes-ash"></i>
      <div class="nes-container is-rounded" id="game-title">
        DODGING-PROFESSOR!<br>
        <i class="snes-jp-logo"></i>
      </div>
      <div class="nes-container with-title is-dark" id="score-board">
        <div class="title" id="board-title">SCORE BOARD</div>
        <div id="Seoul-uni" style="display: flex; justify-content: center; align-items: center; color: white;font-size: 20px; margin-top: 20px;">SCORE :<span id="score" style="display: flex; justify-content: center; align-items: center; font-size: 20px;">0</span></div>
      </div>
    </div>


    <div class="game_container">
        <canvas
            id = "myCanvas"
            width ='1024'
            height = '768'> 
            <!-- width = ' 700'
              height = ' 400' > -->
        </canvas>

        <div style="text-align: center;" >
            <button
                class="nes-btn is-warning"
                type="button"
                id="start_btn" onclick="start()">
                Start
            </button>
        </div>
    </div>

    <audio
        controls id="bgm"
        hidden='true'>

        <source
            src="/dodging-professor/sounds/InvisibleSizeDown.mp3"
            type="audio/mp3">
    </audio>

</body>
</html>
